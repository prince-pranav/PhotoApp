<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_detail"
        tools:context=".DetailActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="64dp"
            android:scaleType="centerCrop"
            app:srcCompat="@color/colorAccent"
            android:id="@+id/iv_photo"/>

    <TextView android:id="@+id/tv_tags"
              android:text="Tags : Animal, Love, Care"
              android:layout_width="wrap_content"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@id/iv_photo"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tv_likes"
              android:text="Total likes : 23"
              android:layout_width="wrap_content"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@id/tv_tags"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tv_fav"
              android:text="Total favorites : 10"
              android:layout_width="wrap_content"
              android:layout_marginTop="8dp"
              android:layout_marginLeft="16dp"
              app:layout_constraintTop_toBottomOf="@id/tv_tags"
              app:layout_constraintLeft_toRightOf="@id/tv_likes"
              android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>